doctype html
html
  head
    meta(charset='utf-8')
  body
    h1 
      a(href='/topics') Server Side Javascript
    ul
      each topic in topics
        li
          a(href='/topics/'+topic.id)= topic.title
    artcle
      if topic
        h2= topic.title
        = topic.description
        div= 'by '+topic.author
      else
        h2 Welcome
        | This is server side tutorial~!
    ul
      li
        a(href='/topics/new') new
      if topic
        li
          a(href='/topics/'+topic.id+'/edit') edit
        li
          a(href='/topics/'+topic.id+'/delete') delete